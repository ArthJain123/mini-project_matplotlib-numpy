])

# shape of the marks array
print("Shape of the marks array :",marks.shape,"\n")


# average of the each subject
avg = np.mean(marks,axis = 0 )
print("Average of the each subject :",avg,"\n")

# average of the each student
avg_stu = np.mean(marks,axis = 1)
print("Average of the each student :",avg_stu,"\n")

sorting = np.flip(np.sort(avg_stu,axis = 0))
print(sorting,"\n")

print("Top 5 students based on their avg :",sorting[:5],"\n")
# print("Top 5 Student IDs:",numbers[sorting])


where_condition = np.where(marks>=40,"Pass","Fail")
# print(where_condition)


max_avg = numbers[avg_stu == np.max(avg_stu)]
print(max_avg,"\n")

min_avg = numbers[avg_stu == np.min(avg_stu)]
print(min_avg,"\n")


plt.title("Average marks per subject",fontsize = 20)

subjects = np.array(["Maths","Science","English"])
plt.xlabel("Name of Subjects")
plt.ylabel("Average numbers for each Subject")

plt.bar(subjects,avg,color = ["red","green","pink"],alpha =0.5)
plt.grid()
plt.show()



plt.title("Student ID vs Overall Average Marks")
plt.xlabel("Sr. number of all students")
plt.ylabel("Avgerage marks of each student")

plt.plot(sr_no,avg_stu,color = "green")
plt.axhline(65)
plt.grid()
plt.show()



plt.title("Study Hours vs Overall Average Marks",fontsize = 20)
plt.xlabel("Study hours")
plt.ylabel("Average marks of all students")
plt.scatter(hours,avg_stu ,color ="skyblue")
plt.grid()
plt.show()
