    [95, 94, 96],

    [68, 65, 70],
    [45, 50, 48],
    [76, 80, 78],
    [33, 35, 30],
    [84, 82, 80],
    [59, 61, 63],
    [91, 89, 93],
    [67, 69, 65],
    [74, 72, 70],
    [86, 88, 85],

    [52, 55, 50],
    [79, 81, 77],
    [64, 66, 68],
    [47, 45, 49],
    [88, 85, 90],
    [71, 73, 75],
    [39, 42, 40],
    [92, 95, 94],
    [58, 60, 62],
