import numpy as np
import matplotlib.pyplot as plt


# viswalise the data of 50students and their subjects(maths,science,english)
sr_no = np.arange(1,51)
numbers = sr_no.reshape((50,1))

hours = np.random.randint(1,9,size =50)

marks = np.array([
    [78, 85, 74],
    [65, 70, 60],
    [90, 92, 88],
    [55, 48, 52],
    [82, 79, 85],
    [40, 42, 38],
